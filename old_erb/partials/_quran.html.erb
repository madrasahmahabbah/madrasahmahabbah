      <!-- Quran verses -->
      <div class="wrapper m-quran">
        <section class="row">
<%
data.quotes.ayats.each do |line|
  line = line.split('|')
  ayat = line[0]
  cite = line[1]
%>
          <blockquote class="m-ayat">
            <p><%= ayat %></p>
            <p class="cite"><%= cite %></p>
          </blockquote>
<%
end
%>
        </section>
      </div>